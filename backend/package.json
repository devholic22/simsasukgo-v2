{
  "name": "@simsasukgo/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node dist/backend/apps/api/src/main.js",
    "start:dev": "ts-node -r tsconfig-paths/register apps/api/src/main.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "migration:run": "typeorm-ts-node-commonjs -r tsconfig-paths/register -d libs/outbound/rdb/src/config/typeorm.datasource.ts migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -r tsconfig-paths/register -d libs/outbound/rdb/src/config/typeorm.datasource.ts migration:revert",
    "migration:show": "typeorm-ts-node-commonjs -r tsconfig-paths/register -d libs/outbound/rdb/src/config/typeorm.datasource.ts migration:show",
    "migration:create": "typeorm-ts-node-commonjs migration:create",
    "migration:generate": "typeorm-ts-node-commonjs -r tsconfig-paths/register migration:generate -d libs/outbound/rdb/src/config/typeorm.datasource.ts",
    "test": "vitest run --no-cache",
    "test:watch": "vitest --no-cache"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "@simsasukgo/shared": "file:../packages/shared",
    "pg": "^8.13.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "tsc-alias": "^1.8.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "vitest": "^2.1.8"
  }
}
